<% if (!isInSurvey) { %>
  <h1>Create a Quick Question</h1>
<% } %>

<label class="question">
  Question:
  <textarea name="question[title]" cols="38" rows="3" maxlength="120"></textarea>
</label>

<input type="hidden" name="question[ord]" value="<%= question.escape('ord') %>">

<div class="answers"></div>

<button class="add-answer btn btn-default btn-sm">Add another answer</button>
<button class="btn btn-default btn-sm">Question options</button>
<% if (isInSurvey) { %>
  <div class="next-question"></div>
<% } else { %>
  <button class="publish-question">Publish My Question!</button>
<% } %>
