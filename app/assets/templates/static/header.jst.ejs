<header class="navbar" id="header">
  <nav class="navbar navbar-default nav-pills" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-slide-dropdown">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/"><img src="https://fastfeedback.s3-us-west-1.amazonaws.com/logo-white.png" class="logo"></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-slide-dropdown">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">Create... <span class="caret"></span></a>       
              <ul class="dropdown-menu" role="menu">
                <li><a href="#/questions/new">... a new Question</a></li>
                <li><a href="#/surveys/new">... a new Survey</a></li>
              </ul>                
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if (current_user.attributes.email) { %>
              <li class="dropdown">
                <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.escape('email') %><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#/my_polls">My Polls</a></li>
                  <li><a href="#/my_account">My Account</a></li>
                  <li class="divider"></li>
                  <li><a href="javascript:void(0)" class="sign-out">Sign Out</a></li>
                </ul>
              </li>
            <% } else { %>
              <li><a href="javascript:void(0)" class="sign-up">Sign Up</a></li>
              <li><a href="javascript:void(0)" class="log-in">Log In</a></li>
            <% } %>
          </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>

