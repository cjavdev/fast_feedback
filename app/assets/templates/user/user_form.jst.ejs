<div class="form">
  <h1>Sign Up</h1>
  <span class="guest-account-ad">(or just <a href="#/login" data-toggle="modal" data-target="#loginModal">sign in</a> using the demo account)</span>

  <form role="form">
    <div class="form-group">
      <label for="email">Email</label>
      <input name="user[email]"
             type="email"
             class="form-control"
             id="email"
             placeholder="yourname@example.com"
             tabindex="1">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input name="user[password]"
             type="password"
             class="form-control"
             id="password"
             placeholder="password"
             tabindex="2">
    </div>
    <button id="submit" class="btn btn-primary" tabindex="3">Sign Up</button>
  </form>
</div>